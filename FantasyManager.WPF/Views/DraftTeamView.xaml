<UserControl x:Class="FantasyManager.WPF.Views.DraftTeamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:FantasyManager.WPF.Common.Behaviors.DragDrop;assembly=FantasyManager.WPF.Common"
             xmlns:controls="clr-namespace:FantasyManager.WPF.Controls"
             xmlns:local="clr-namespace:FantasyManager.WPF.Views"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Style="{StaticResource DefaultBackgroundGrid}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- UserTeamFormationView -> überlegen wie in eigene Controlzu packen!! -->
        <Border Grid.Column="1"
            Background="{StaticResource BrushPrimary2}"
            BorderThickness="5" BorderBrush="{StaticResource BrushPrimary1}" CornerRadius="20">

            <Grid Margin="20 10">
                <Grid.Background>
                    <ImageBrush ImageSource="/Resources/FootballPitch.jpg" Stretch="Fill"/>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1" Margin="5"
                            AllowDrop="True"
                            behaviors:DropBehavior.PreviewDropCommand="{Binding OnPlayerDroppedCommand}">
                        <Image/>
                    </Button>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Margin="5">
                        <Image/>
                    </Button>

                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" Margin="5">
                            <Image/>
                        </Button>

                        <Button Grid.Column="2" Margin="5">
                            <Image/>
                        </Button>
                    </Grid>

                    <Button Grid.Column="2" Margin="5">
                        <Image/>
                    </Button>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Margin="5">
                        <Image/>
                    </Button>

                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" Margin="5">
                            <Image/>
                        </Button>

                        <Button Grid.Column="2" Margin="5">
                            <Image/>
                        </Button>
                    </Grid>

                    <Button Grid.Column="2" Margin="5">
                        <Image/>
                    </Button>
                </Grid>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Margin="5">
                            <Image/>
                        </Button>

                        <Button Grid.Column="3" Margin="5">
                            <Image/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        
        <!-- PlayerListView -> auslagern!!! -->
        <Border Grid.Column="2"
                BorderThickness="2" BorderBrush="{StaticResource BrushPrimary1}" CornerRadius="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2.5*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--TODO: neuen RadioButton Style schreiben!!-->
                    <RadioButton Content="Goalkeeper"
                             FontSize="20"
                             Style="{StaticResource NavRadioButton}"
                             Grid.Column="0" Grid.Row="0" Margin="10"/>

                    <RadioButton Content="Defender"
                             FontSize="20"
                             Style="{StaticResource NavRadioButton}"
                             Grid.Column="1" Grid.Row="0" Margin="10"/>

                    <RadioButton Content="Midfielder"
                             FontSize="20"
                             Style="{StaticResource NavRadioButton}"
                             Grid.Column="0" Grid.Row="1" Margin="10"/>

                    <RadioButton Content="Attacker"
                             FontSize="20"
                             Style="{StaticResource NavRadioButton}"
                             Grid.Column="1" Grid.Row="1" Margin="10"/>
                </Grid>

                <ListView Grid.Row="1" Margin="20 10" 
                          ItemsSource="{Binding Players}">
                    <ListView.ItemTemplate>
                        <ItemContainerTemplate>
                            <TextBlock Text="{Binding Header.MainInfo}">
                                <i:Interaction.Behaviors>
                                    <behaviors:FrameworkElementDragBehavior/>
                                </i:Interaction.Behaviors>
                            </TextBlock>
                        </ItemContainerTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
